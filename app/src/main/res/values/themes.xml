<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TaskOne" parent="android:Theme.Material.Light.NoActionBar" />


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/splash_background_color</item>
        <!-- Set the splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_app_logo</item>
        <!-- Set the splash screen icon color -->
        <item name="windowSplashScreenIconBackgroundColor">@color/primary</item>
        <!-- Set the theme to apply after the splash screen finishes -->
        <item name="postSplashScreenTheme">@style/Theme.TaskOne</item>
    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_background</item>
    </style>

</resources>